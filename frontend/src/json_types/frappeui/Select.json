{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "SelectOption": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "label": {
              "type": "string"
            },
            "value": {
              "type": "string"
            },
            "disabled": {
              "type": "boolean"
            }
          },
          "required": [
            "label",
            "value"
          ],
          "additionalProperties": false
        }
      ]
    },
    "SelectProps": {
      "type": "object",
      "properties": {
        "size": {
          "type": "string",
          "enum": [
            "sm",
            "md",
            "lg"
          ]
        },
        "variant": {
          "type": "string",
          "enum": [
            "subtle",
            "outline",
            "ghost"
          ]
        },
        "placeholder": {
          "type": "string"
        },
        "disabled": {
          "type": "boolean"
        },
        "id": {
          "type": "string"
        },
        "modelValue": {
          "type": [
            "string",
            "number"
          ]
        },
        "options": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SelectOption"
          }
        }
      },
      "additionalProperties": false
    }
  }
}